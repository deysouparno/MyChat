<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splash_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="group_icon" parent="Theme.MaterialComponents.NoActionBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="chatBubble_send">
        <item name="android:backgroundTint">#00897b</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <style name="chatBubble_receive">
        <item name="android:backgroundTint">#263238</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <style name="search_style">
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#E1DADA</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="tab_style">
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="type_message">
        <item name="android:backgroundTint">#102027</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:textColorHint">#fafafa</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/white</item>
    </style>
</resources>