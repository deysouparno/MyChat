<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/singnUpFragment">

    <fragment
        android:id="@+id/singnUpFragment"
        android:name="com.example.mychat.screens.SignUpFragment"
        android:label="Sign up"
        tools:layout="@layout/fragment_singn_up">
        <action
            android:id="@+id/action_singnUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/singnUpFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_singnUpFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:popUpTo="@id/singnUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mychat.screens.LoginFragment"
        android:label="Log in"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_singnUpFragment"
            app:destination="@id/singnUpFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.mychat.screens.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeScreenFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_homeScreenFragment_to_newChatFragment"
            app:destination="@id/newChatFragment" />
        <action
            android:id="@+id/action_homeScreenFragment_to_chatLogFragment"
            app:destination="@id/chatLogFragment" />
        <argument
            android:name="userObj"
            app:argType="com.example.mychat.models.User" />
    </fragment>
    <fragment
        android:id="@+id/newChatFragment"
        android:name="com.example.mychat.screens.NewChatFragment"
        android:label="fragment_new_chat"
        tools:layout="@layout/fragment_new_chat" >
        <action
            android:id="@+id/action_newChatFragment_to_chatLogFragment"
            app:destination="@id/chatLogFragment" />
        <argument
            android:name="userObj"
            app:argType="com.example.mychat.models.User" />
    </fragment>
    <fragment
        android:id="@+id/chatLogFragment"
        android:name="com.example.mychat.screens.ChatLogFragment"
        android:label="fragment_chat_log"
        tools:layout="@layout/fragment_chat_log" >
        <argument
            android:name="chat_to_person"
            app:argType="com.example.mychat.models.User" />
        <argument
            android:name="chat_from_person"
            app:argType="com.example.mychat.models.User" />
        <action
            android:id="@+id/action_chatLogFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:popUpTo="@id/chatLogFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>